<% layout("layouts/boilerplate"); -%>
<div class="row mt-3">
<div class="col-8 offset-2">
<body>
    <h3>New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
                required
                class="form-control"
                name="listing[title]"
                placeholder="Add a title"
                type="text"
            />
            <div class="valid-feedback">Title is valid</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
                required
                class="form-control"
                name="listing[description]"
                type="text"></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input
                class="form-control"
                name="listing[image]"
                type="file"
            />
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input
                    required class="form-control"
                    name="listing[price]"
                    placeholder="Enter price"
                    type="text"
                    pattern="\d*"
                    inputmode="numeric"
                />
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input
                    required
                    class="form-control"
                    name="listing[country]"
                    placeholder="India"
                    type="text"
                />
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input
                required
                class="form-control"
                name="listing[location]"
                placeholder="Panaji, Goa"
                type="text"
            />
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</body>
</div>
</div>